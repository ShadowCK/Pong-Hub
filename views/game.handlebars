<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <title>Pong Hub</title>
    <link rel='shortcut icon' href='/assets/img/favicon.png' />
    <link rel='stylesheet' href='/assets/bulma.css' />
    <link rel='stylesheet' href='/assets/game.css' />
  </head>
  <body>
    <!-- Navigation bar -->
    <nav class='navbar' role='navigation' aria-label='main navigation'>
      <div class='navbar-brand'>
        <a class='navbar-item' href='/'>
          <img src='/assets/img/logo.png' width='112' height='28' />
        </a>
        <a
          role='button'
          class='navbar-burger'
          aria-label='menu'
          aria-expanded='false'
          data-target='navbar-body'
        >
          <span aria-hidden='true'></span>
          <span aria-hidden='true'></span>
          <span aria-hidden='true'></span>
        </a>
      </div>

      <div id='navbar-body' class='navbar-menu'>
        <div class='navbar-start'>
          <a id='navbar-username' class='navbar-item'>Username</a>
        </div>

        <div class='navbar-end'>
          <div class='navbar-item'>
            <div class='buttons'>
              <a class='button is-light' href='/changePassword'>Change Password</a>
              <a class='button is-light' href='/logout'>Log Out</a>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <section class='section'>
      <div class='container'>
        <!-- Columns for game window and chat sidebar -->
        <div class='columns'>
          <!-- Column for the game window -->
          <div class='column is-three-quarters'>
            <h2 class='title is-4'>Game Window</h2>
            <!-- GameWindow from React will render here -->
            <div id='content'></div>
          </div>
          <!-- Column for the chat sidebar -->
          <div class='column'>
            <h2 class='title is-4'>Chat</h2>
            <!-- Chat content -->
            <div id='chat' class='box'>
              <!-- Chat messages display area -->
              <div id='chat-messages' class='content'>
                <!-- Messages will be appended here -->
              </div>
              <!-- Chat input field -->
              <div class='field has-addons'>
                <div class='control is-expanded'>
                  <input
                    id='chat-input'
                    class='input'
                    type='text'
                    placeholder='Type a message...'
                  />
                </div>
                <div class='control'>
                  <button id='send-button' class='button is-info'>Send</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recharge and purchase items section -->
    <section class='section'>
      <div class='container'>
        <h2 class='title is-4'>Recharge and Purchase Items</h2>
        <!-- Placeholder content -->
        <p>Placeholder for recharge and purchase items</p>
      </div>
    </section>

    <!-- socket IO client -->
    <script src='/socket.io/socket.io.js'></script>

    <script src='/assets/gameBundle.js'></script>
  </body>
</html>